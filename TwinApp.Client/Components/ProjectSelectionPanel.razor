@using TwinApp.Client.Services
@inject ProjectService ProjectService


<div class="overlay-box">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Select Project</h3>
        <!-- Upload button triggers hidden InputFile -->
        <label class="btn btn-outline-light btn-sm mb-0">
            Upload
            <InputFile OnChange="OnFileSelected" style="display:none;" />
        </label>
    </div>
    @if (ProjectList is null || ProjectList.Count == 0)
    {
        <p>Loading projects...</p>
    }
    else
    {
        <div class="project-list table-responsive">
            <table class="table text-light">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Created At</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                @if (ProjectList != null)
                {
                    @foreach (var project in ProjectList)
                    {
                        <tr>
                            <td>@project.Name</td>
                            <td>@project.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <button class="btn btn-outline-light btn-sm"
                                        @onclick="() => Select(project.Id)">
                                    Open
                                </button>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>

    }
</div>

@code {
    [Parameter] public IReadOnlyList<ProjectService.ProjectDto>? ProjectList { get; set; }
    [Parameter] public EventCallback<string> OnProjectSelected { get; set; }
    [Parameter] public EventCallback<IBrowserFile> OnProjectUpload { get; set; }

    private async Task Select(string id)
    {
        await OnProjectSelected.InvokeAsync(id);
    }

    private async Task OnFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        await OnProjectUpload.InvokeAsync(file);
    }
    

}