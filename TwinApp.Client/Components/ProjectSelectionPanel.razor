@using TwinApp.Client.Services
<div class="overlay-box">
    <h3>Select Project</h3>
    @if (Projects is null || Projects.Count == 0)
    {
        <p>Loading projects...</p>
    }
    else
    {
        <div class="project-list table-responsive">
            <table class="table text-light">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Created At</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                @if (Projects != null)
                {
                    @foreach (var project in Projects)
                    {
                        <tr>
                            <td>@project.Name</td>
                            <td>@project.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <button class="btn btn-outline-light btn-sm"
                                        @onclick="() => Select(project.Id)">
                                    Open
                                </button>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>

    }
</div>

@code {
    [Parameter] public IReadOnlyList<ProjectService.ProjectDto>? Projects { get; set; }
    [Parameter] public EventCallback<string> OnProjectSelected { get; set; }

    private async Task Select(string id)
    {
        await OnProjectSelected.InvokeAsync(id);
    }
}